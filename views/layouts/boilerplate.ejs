     <script src="/js/Validation_script.js"></script>

     <script>
        document.addEventListener("DOMContentLoaded", function () {
    let toggler = document.querySelector(".navbar-toggler");
    let navbar = document.querySelector(".navbar");
    let bodyContent = document.querySelector(".container"); // Main content

    toggler.addEventListener("click", function () {
        let isExpanded = toggler.getAttribute("aria-expanded") === "true";

        if (isExpanded) {
            navbar.classList.add("expanded-navbar");
            bodyContent.classList.add("body-shift");
        } else {
            navbar.classList.remove("expanded-navbar");
            bodyContent.classList.remove("body-shift");
        }
    });
});
     </script>

